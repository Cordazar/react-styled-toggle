{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "lib",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src"]
}
